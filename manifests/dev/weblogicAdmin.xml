<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='weblogicAdmin'>

<service
	name='application/weblogic/weblogicAdmin'
	type='service'
	version='1'>

	<!-- Need name service resolution and network to connect to WL AdminServer -->
	<dependency
		name='milestones'
		grouping='require_all'
		restart_on='none'
		type='service'>
		<service_fmri value='svc:/milestone/multi-user-server:default'/>
		<service_fmri value='svc:/milestone/network:default'/>
		<service_fmri value='svc:/milestone/name-services' />
	</dependency>

	<!-- Need the local file system and NFS client to be running -->
	<dependency
		name='file-systems'
		grouping='require_all'
		restart_on='restart'
		type='service'>
		<service_fmri value='svc:/system/filesystem/local:default' />
		<service_fmri value='svc:/network/nfs/client:default' />
		<service_fmri value='svc:/network/nfs/status:default' />
	</dependency>

	<!-- Need network services like DNS for hostname resolution and ldap for user access -->
	<dependency
		name='network'
		grouping='require_all'
		restart_on='none'
		type='service'>
		<service_fmri value='svc:/network/dns/client:default' />
		<service_fmri value='svc:/network/ldap/client:default' />
	</dependency>

	<!-- Need crypto-service to be working for SSL operations to work -->
	<dependency
		name='crypto-service'
		grouping='require_all'
		restart_on='none'
		type='service'>
		<service_fmri value='svc:/system/cryptosvc' />
	</dependency>

	<exec_method
		type='method'
		name='start'
		exec='/cpg/3rdParty/scripts/cpg/utils/SMFWebLogicAdmin.sh start'
		timeout_seconds='15' >
	</exec_method>

	<exec_method
		type='method'
		name='stop'
		exec='/cpg/3rdParty/scripts/cpg/utils/SMFWebLogicAdmin.sh stop'
		timeout_seconds='30' >
	</exec_method>

	<exec_method
		type='method'
		name='refresh'
		exec='/cpg/3rdParty/scripts/cpg/utils/SMFWebLogicAdmin.sh restart'
		timeout_seconds='30' >
	</exec_method>

