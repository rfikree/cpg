<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='Introscope:epagent'>

<service
	name='application/introscope/epagent'
	type='service'
	version='1'>

	<create_default_instance enabled='true' />

	<single_instance/>

	<dependency name='multi-user'
		grouping='require_all'
		restart_on='none'
		type='service'>
			<service_fmri value='svc:/milestone/multi-user:default'/>
	</dependency>

	<method_context>
		<method_credential user='apm' group='devapps' />
	</method_context>

	<exec_method
		type='method'
		name='start'
		exec='/cpg/3rdParty/installs/introscope/9.7.1.0/epagent_cpodeploy/bin/EPACtrl.sh start'
		timeout_seconds='60' >
	</exec_method>

	<exec_method
		type='method'
		name='stop'
		exec='/cpg/3rdParty/installs/introscope/9.7.1.0/epagent_cpodeploy/bin/EPACtrl.sh stop'
		timeout_seconds='60' >
	</exec_method>

   <!-- default service model of 'contract' -->
	<property_group name='startd' type='framework'>
		<propval name='duration' type='astring' value='contract'/>
	</property_group>

	<stability value='Evolving' />

	<template>
		<common_name>
			<loctext xml:lang='C'>Introscope ePAgent</loctext>
		</common_name>
	</template>

</service>
</service_bundle>
